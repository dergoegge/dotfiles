# use ag for fzf
export FZF_DEFAULT_COMMAND='ag -g ""'

# android
export ANDROID_HOME=$HOME/Library/Android/sdk
export NDK_DIR=$ANDROID_HOME/ndk-bundle

# gopath
export GOPATH=$HOME/go

path_prepend /sbin
path_prepend /usr/bin
path_prepend /usr/sbin
path_prepend /usr/local/bin
path_prepend /usr/local/sbin

path_prepend $HOME/.rcmd
path_prepend $HOME/use-4.2.0/bin/
path_prepend $HOME/apache-maven-3.5.0/bin
path_prepend $HOME/anaconda3/bin/
path_prepend $HOME/flutter/bin
path_prepend $HOME/.local/bin

path_prepend $GOPATH/bin
path_prepend $ANDROID_HOME/tools
path_prepend $ANDROID_HOME/platform-tools

# for building binaries from go files
export GO_NDK_ROOT=$GOPATH/android-ndk-toolchain
export GO_NDK_CC=$NDK_RROT/bin/arm-linux-androideabi-gcc

export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_181.jdk/Contents/Home

# panda3d
export DYLD_LIBRARY_PATH=$DYLD_LIBRARY_PATH:/Developer/Panda3D/lib
